        "type": "org.thingsboard.rule.engine.transform.TbTransformMsgNode",
        "name": "同步设备信息",
        "debugMode": true,
        "singletonMode": false,
        "configurationVersion": 0,
        "configuration": {
          "scriptLang": "JS",
          "jsScript": "//构建格式样例：{\"MA02-MODULEXRAY02-A\":{\"ip\":\"\",area:\"\",module:\"\"}}\n\nvar deviceName = metadata.deviceName;\nvar alarmsInfo = metadata.ss_alarmsInfo;\nif(alarmsInfo != undefined){\n    alarmsInfo = JSON.parse(alarmsInfo);\n}else{\n    alarmsInfo = {\"info\": []};\n}\nvar info = {};\ninfo['name'] = deviceName\ninfo['state'] = msg.EquipmentState\ninfo['ts'] = Date.now();\nif (alarmsInfo.info.length == 0){\n    alarmsInfo.info.push(info)\n} else {\n    var flag = true;\n    for (var i = 0; i < alarmsInfo.info.length; i++){\n        if (deviceName == alarmsInfo.info[i].name){\n            flag = false;\n            if (info['state'] != alarmsInfo.info[i].state){\n                alarmsInfo.info[i].state = msg.EquipmentState;\n                alarmsInfo.info[i].ts = info['ts'];\n            }\n        }\n    }\n    if (flag){\n        alarmsInfo.info.push(info);\n    }\n}\n\nvar msg = {alarmsInfo:alarmsInfo};\nreturn {msg: msg, metadata: metadata, msgType: 'POST_ATTRIBUTES_REQUEST'};",
          "tbelScript": "return {msg: msg, metadata: metadata, msgType: msgType};"
        }
